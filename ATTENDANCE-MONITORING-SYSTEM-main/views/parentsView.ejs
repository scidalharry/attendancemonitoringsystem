<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <!-- <link rel="stylesheet" href="https://cdn.example.com/fontawesome/css/all.css"> -->
  <link rel="shortcut icon" type="image/png" href="images/essu-logo.png">
  <link rel="stylesheet" href="css/Parentsview.css">
  <script src="java/parentsview.js" defer></script>
  <title>Faculty Home</title>
</head>
<body>

  <div class="background">
<img src="images/background.webp" alt="" srcset="">
  </div>
  <div class="sidebar">
    <div class="logo-details">
      <img src="images/essu-logo.png" alt="essu logo" class="logo-details__img">
        <span class="logo-details__name">Attendance Monitoring System</span>
      </div>
    <div class="line"></div>

    <ul class="nav-list">
      <li class="nav-list__lists">
        <a href="/home" class="page-main">
          <i class="fas fa-home page-main--icon"></i> 
          <span class="page-main--name">Home</span>
        </a>
      </li>
      <!-- <li class="nav-list__lists">
        <a href="/schedule" class="page-main">
          <i class="fas fa-calendar-alt page-main--icon"></i>
          <span class="page-main--name">Schedule</span>
        </a>
      </li> -->
      <li class="nav-list__lists">
        <a href="/account" class="page-main">
          <i class="fas fa-user page-main--icon"></i>
          <span class="page-main--name">Account Details</span>
        </a>
      </li>
      <li class="nav-list__lists2">
        <a href="/logout" class="page-main">
          <i class="fas fa-sign-out-alt page-main--icon"></i> 
          <span class="page-main--name">Log Out</span>
        </a>
      </li>
    </ul>
  </div>
 
  <div class="content-table">
    <% if (userType === 'parent') { %>
      <div class="filter-dropdown">
        <form id="filterForm" action="/home" method="GET">
          <select id="filter" onchange="submitForm()">
            <option value="">MY STUDENT</option>
            <% studentData.forEach(student => { %>
              <option value="<%= student.first_name %>" data-student-number="<%= student.student_number %>"><%= student.first_name %></option>
            <% }); %>
          </select>
          <!-- Hidden input field to store selected student's number -->
          <input type="hidden" id="studentId" name="studentId"> 
        </form>
      </div>
 
    
      
      <div id="myModal" class="modal">
        <div class="modal-content">
          <span class="close"></span>
          <h2>Add Student</h2>
          <form id="addStudentForm" action="/add-student" method="POST">
           
            <input type="text" id="studentNumberInput" name="studentNumber" placeholder="Enter Student Number...">
            <button type="submit" id="submitStudentNumber">Submit</button>
            <button type="button" id="backButton">Back</button>
          </form>
        </div>
      </div>
      <button id="openModalBtn">ADD STUDENT</button>
      
   
    <% } else { %>
<!-- waray -->

    <% } %>
     

    <table>
      <thead>
       <tr>
                <th>TIME</th>
                <th>DATE</th>
                <th>FULLNAME</th>
                <th>YEAR & SECTION</th>
                <th>SUBJECT</th>
                <th>STUDENT NO.</th>
               
            </tr>
      </thead>
      <tbody>
        <% data.forEach(row => { %>
          <tr>
              <td><%= row.time %></td>
              <td><%= row.date %></td>
              <td><%= row.fullname %></td>
              <td> <%= row.year %> <%= row.section%></td>
              <td><%= row.subject %></td>
              <td><%= row.student_number %></td>
          </tr>
      <% }); %>
      </tbody>
    </table>

   
  </div>
 
</body>
</html>
</body>
</html>
